<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Tab1Dashboard">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginTop="44dp"
        android:text="@string/battery_display_heading"
        android:textColor="@color/textColorBlack"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/batteryLevelThree"
        android:layout_width="98dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/rectangle"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/myRectangleView5"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <View
        android:id="@+id/batteryLevelTwo"
        android:layout_width="98dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@drawable/rectangle"
        app:layout_constraintStart_toEndOf="@+id/myRectangleView5"
        app:layout_constraintTop_toBottomOf="@+id/batteryLevelThree" />

    <View
        android:id="@+id/batteryLevelOne"
        android:layout_width="98dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@drawable/rectangle"
        app:layout_constraintStart_toEndOf="@+id/myRectangleView5"
        app:layout_constraintTop_toBottomOf="@+id/batteryLevelTwo" />

    <View
        android:id="@+id/myRectangleView4"
        android:layout_width="4dp"
        android:layout_height="132dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:background="@drawable/rectangle"
        app:layout_constraintStart_toEndOf="@+id/batteryLevelTwo"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <View
        android:id="@+id/myRectangleView5"
        android:layout_width="4dp"
        android:layout_height="132dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:background="@drawable/rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <View
        android:id="@+id/myRectangleView6"
        android:layout_width="122dp"
        android:layout_height="4dp"
        android:layout_marginStart="56dp"
        android:layout_weight="1"
        android:background="@drawable/rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myRectangleView4" />

    <View
        android:id="@+id/myRectangleView7"
        android:layout_width="44dp"
        android:layout_height="4dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="32dp"
        android:layout_weight="1"
        android:background="@drawable/rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <View
        android:id="@+id/myRectangleView8"
        android:layout_width="39dp"
        android:layout_height="4dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="46dp"
        android:layout_weight="1"
        android:background="@drawable/rectangle"
        app:layout_constraintBottom_toTopOf="@+id/myRectangleView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <View
        android:id="@+id/myRectangleView9"
        android:layout_width="39dp"
        android:layout_height="4dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="46dp"
        android:layout_weight="1"
        android:background="@drawable/rectangle"
        app:layout_constraintBottom_toTopOf="@+id/myRectangleView4"
        app:layout_constraintStart_toEndOf="@+id/myRectangleView8"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <View
        android:id="@+id/myRectangleView10"
        android:layout_width="4dp"
        android:layout_height="14dp"
        android:layout_marginStart="44dp"
        android:layout_weight="1"
        android:background="@drawable/rectangle"
        app:layout_constraintBottom_toTopOf="@+id/myRectangleView9"
        app:layout_constraintStart_toEndOf="@+id/myRectangleView11" />

    <View
        android:id="@+id/myRectangleView11"
        android:layout_width="4dp"
        android:layout_height="14dp"
        android:layout_marginStart="91dp"
        android:layout_weight="1"
        android:background="@drawable/rectangle"
        app:layout_constraintBottom_toTopOf="@+id/myRectangleView9"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/battery_percentage"
        android:layout_width="135dp"
        android:layout_height="102dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="72dp"
        android:text="75%"
        android:textColor="@color/textColorBlack"
        android:textSize="64sp"
        app:layout_constraintStart_toEndOf="@+id/myRectangleView4"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/time_remaining_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="80dp"
        android:text="@string/time_remain_heading"
        android:textColor="@color/textColorBlack"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myRectangleView6" />

    <!--TODO : Different font size for H and Min -->
    <TextView
        android:id="@+id/time_remaining"
        android:layout_width="316dp"
        android:layout_height="94dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"
        android:text="3H 42MIN"
        android:textColor="@color/textColorBlack"
        android:textSize="64sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_remaining_header" />

</android.support.constraint.ConstraintLayout>